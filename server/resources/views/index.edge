<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="styles.css" />
    <title>Document</title>
  </head>
  <body>
    <div id="form-main">
      <div id="form-div">
        <h1 id="display-message"></h1>
        <form class="form" id="form1">
          <p class="name">
            <input
              name="name"
              type="text"
              class="validate[required,custom[onlyLetter],length[0,100]] feedback-input"
              placeholder="Name"
              id="name"
            />
          </p>

          <p class="email">
            <input
              name="email"
              type="text"
              class="validate[required,custom[email]] feedback-input"
              id="email"
              placeholder="Email"
            />
          </p>

          <div class="submit">
            <input type="submit" value="Create User" id="button-blue" />
            <div class="ease"></div>
          </div>
        </form>
      </div>
    </div>

    <script src="main.js"></script>
  </body>
</html>
